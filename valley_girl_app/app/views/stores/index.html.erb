<h1>RAD STORES</h1>

<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
  <style>
      html, body {
        margin: 1em;
        padding: 1em 2em;
      }
      #map {
        height: 400px;
      }
    </style>
  </head>
  <body>

    <% @stores.each do |store| %><br/>
    <div class="store-links">
      <%= link_to "#{store.name}", store_path(store.id) %><br/>
    </div>
    <% end %>

  <br/>

    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 34.071489, lng: -118.400564},
          zoom: 8
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_KEY'] %>&callback=initMap"
    async defer></script>
 
<%= link_to "CREATE", new_store_path %><br/>
<%= link_to "MAIN", root_path %>

 </body>
</html>
